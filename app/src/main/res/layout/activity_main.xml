<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/sunny"
            android:id="@+id/imageViewBackground"
            android:scaleType="fitXY"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/edit_text_buscar"
                android:ems="10"
                android:textColor="@color/colorTextIcons"
                android:id="@+id/editTextBuscar" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/buttonBuscar" android:layout_marginRight="8dp"/>
        <Button
                android:text="@string/button_buscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonBuscar" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
        <TextView
                android:text="@string/text_view_ciudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCiudad" android:layout_marginTop="64dp"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/editTextBuscar" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="36sp"/>
        <TextView
                android:text="@string/text_view_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDescripcion" android:layout_marginTop="8dp"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/textViewCiudad" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="18sp"/>
        <TextView
                android:text="@string/text_view_grados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewGrados" android:layout_marginTop="8dp"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/imageViewIcono" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="70sp"/>
        <TextView
                android:text="@string/text_view_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewEstado"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/textViewGrados" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:textSize="24sp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/text_view_minima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMinima" android:layout_marginTop="8dp"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/textViewEstado" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="128dp" android:layout_marginStart="128dp"/>
        <TextView
                android:text="@string/text_view_maxima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMaxima" android:layout_marginTop="8dp"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/textViewEstado" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="128dp" android:layout_marginRight="128dp"
                app:layout_constraintStart_toEndOf="@+id/textViewMinima" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/text_view_sensacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextIcons"
                android:id="@+id/textViewSensacion" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewMinima" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
        <TextView
                android:text="@string/text_view_humedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewHumedad"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/textViewSensacion" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="32dp"/>
        <TextView
                android:text="@string/text_view_viento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewViento"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/textViewSensacion" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"/>
        <TextView
                android:text="@string/text_view_presion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPresion"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/textViewSensacion"
                app:layout_constraintStart_toEndOf="@+id/textViewHumedad" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/textViewViento"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="32dp"/>
        <TextView
                android:text="@string/text_view_humedad_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewHumedadValor"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/textViewHumedad" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/text_view_viento_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewVientoValor"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/textViewViento" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/text_view_presion_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPresionValor"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/textViewPresion"
                app:layout_constraintStart_toEndOf="@+id/textViewHumedadValor" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/textViewVientoValor"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"/>
        <TextView
                android:text="@string/text_view_siguientes_dias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewSiguientesDias"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorTextIcons"
                app:layout_constraintTop_toBottomOf="@+id/textViewPresionValor"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
        <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/imageViewIcono" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewDescripcion"
                android:scaleType="fitXY"/>
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>